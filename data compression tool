#include <stdio.h>
#include <string.h>

void runLengthEncode(char *str) {
    int len = strlen(str);
    int count = 1;

    printf("Compressed Output: ");

    for (int i = 0; i < len; i++) {
        // Count consecutive characters
        while (i < len - 1 && str[i] == str[i + 1]) {
            count++;
            i++;
        }
        printf("%c%d", str[i], count);
        count = 1;
    }

    printf("\n");
}

int main() {
    char input[1000];

    printf("Enter a string to compress (no spaces): ");
    scanf("%s", input);

    runLengthEncode(input);

    return 0;
}
